<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h3 class="text-center">Login</h3>
            <form action="/login" method="POST">
                {{#if loginError}}
                <p style="color:red">{{loginError}}</p>
                {{/if}}
                <div class="form-group">
                    <label >Email-address</label>
                    <input name="emailid" class="form-control" placeholder='Enter Login'>
                </div>
                <div class="form-group mt-3">
                    <label for="password">Password</label>
                    <input name='password' class="form-control" placeholder='Enter Password'>
                </div>
                <div class="form-group mt-3"></div>
                <a href="/signup">Create new account?</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>