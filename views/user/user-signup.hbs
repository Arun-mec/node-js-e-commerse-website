<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h3 class="text-center">Signup</h3>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label >First Name</label>
                    <input name="fname" class="form-control" placeholder='Enter name'>
                </div>
                <div class="form-group mt-3">
                    <label >Last Name</label>
                    <input name="lname" class="form-control" placeholder='Enter name'>
                </div>
                <div class="form-group mt-3">
                    <label for="Email-address">Email-address</label>
                    <input name="emailid" class="form-control" placeholder='Enter email address'>
                </div>
                <div class="form-group mt-3">
                    <label for="password">Password</label>
                    <input name='password' class="form-control" placeholder='Enter Password'>
                </div>
                <div class="form-group mt-3"></div>
                <a href="/login">Already have an account?</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>