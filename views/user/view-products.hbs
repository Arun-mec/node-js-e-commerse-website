<section>
  <div class="container">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner shadow mb-5 bg-dark rounded">
        {{#each advertisements}}
        {{#if this.default}}
        <div class="carousel-item active">
          <img src="/ad-images/{{this._id}}.jpg" class="darkened-image d-block w-100 m-auto" alt="..."
            style="filter:brightness(100%)">
          </div>
        {{else}}
        <div class="carousel-item">
          <img src="/ad-images/{{this._id}}.jpg" class="d-block w-100 m-auto" alt="..."  style="filter:brightness(100%)">

        </div>
        {{/if}}{{/each}}
      </div>
    </div>
  </div>
</section>


<section>
  <div class="container mt-5 m-auto">
    <div class="row">
      {{#each products}}
      <div class="col-md-3">
        <div class="shadow p-3 mx-2 my-3 b-4 bg-body rounded" style="width: 18rem;height:45rem">
          <img src="/public-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height:15rem">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Rs. {{this.price}}</p>
            <button onclick="addtoCart('{{this._id}}')" class="btn btn-secondary">Add to cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>




<section>
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  </div>
</section>