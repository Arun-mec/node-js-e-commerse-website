<section>
    <div class="container">
        <div class="row w-25 p-1 ms-auto mt-2">
            <a href="/admin/add-advertisements" class="btn btn-secondary">Add advertisements</a>
        </div>
        <table class="table mt-3 p-5">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each advertisements}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width:150px;height:75px" src="/ad-images/{{this._id}}.jpg" alt=""></td>
                    <td><a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}')">Delete</a></td>
                </tr>
                 {{/each}}
            </tbody>
        </table>
    </div>
</section>